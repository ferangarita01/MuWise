rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Allow users to manage their own profile photos
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Add other rules for different storage paths as needed
    // e.g., for agreement attachments
    // match /agreements/{agreementId}/{fileName} {
    //   allow read, write: if request.auth != null; // Add more specific logic here
    // }
  }
}
